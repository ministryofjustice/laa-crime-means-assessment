{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "apiCreateIntialMeansAssessmentRequest.json",
  "type": "object",
  "title": "Initial Means Assessment Request",
  "description": "Data contract for the initial means assessment request",
  "properties": {
    "correlationId": {
      "type": "string",
      "description": "The correlation UUID"
    },
    "maatId": {
      "type": "integer",
      "description": "MAAT / Rep Id"
    },
    "cmuId": {
      "type": "integer",
      "description": "Case Management Unit Id"
    },
    "userId": {
      "type": "string",
      "description": "User  ID"
    },
    "assessmentId": {
      "type": "string",
      "description": "The financial assessment Id"
    },
    "criteriaId": {
      "type": "integer",
      "description": "Criteria ID"
    },
    "transactionDateTime": {
      "type": "string",
      "description": "Time Stamp of the transaction",
      "format": "date-time"
    },
    "assessmentDate": {
      "type": "string",
      "description": "Effective Date of the assessment"
    },
    "otherBenefitNote": {
      "type": "string",
      "description": "Benefit Note"
    },
    "otherIncomeNote": {
      "type": "string",
      "description": "Income Note."
    },
    "employmentCode": {
      "type": "string",
      "description": "User  ID"
    },
    "notes": {
      "type": "string",
      "description": "Notes field."
    },
    "assessmentStatus": {
      "description": "Assessment Status",
      "$ref": "common/apiAssessmentStatus.json"
    },
    "newWorkReason": {
      "description": "Work Reason Details",
      "$ref": "common/apiNewWorkReason.json"
    },
    "reviewType": {
      "description": "Review Type Info",
      "$ref": "common/apiReviewType.json"
    },
    "supplierInfo": {
      "description": "The  address details of the supplier",
      "$ref": "common/apiSupplierInfo.json"
    },
    "assessmentSummary": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "common/apiAssessmentSummary.json"
      }
    }
  },
  "usn": {
    "type": "integer",
    "description": "Unique Submission Number - EForm Reference"
  },
  "additionalProperties": false,
  "required": [
    "maatId",
    "correlationId",
    "cmuId",
    "userId",
    "transactionDateTime",
    "assessmentDate",
    "newWorkReason",
    "supplierInfo",
    "assessmentSummary"
  ]
}