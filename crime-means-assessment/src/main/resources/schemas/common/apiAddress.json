{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "apiAddress.json",
  "type": "object",
  "title": "The address schema",
  "description": "Details of an Address",
  "properties": {
    "addressId": {
      "type": "integer",
      "description": "Address ID"
    },
    "line1": {
      "type": "string",
      "description": "Address Line 1"
    },
    "line2": {
      "type": "string",
      "description": "Address Line 2."
    },
    "line3": {
      "type": "string",
      "description": "Address Lne 3."
    },
    "city": {
      "type": "string",
      "description": "City"
    },
    "postCode": {
      "type": "string",
      "description": "Post Code"
    },
    "county": {
      "type": "string",
      "description": "County"
    },
    "country": {
      "type": "string",
      "description": "Country"
    }
  },
  "additionalProperties": true,
  "required": [
    "addressId",
    "line1",
    "postCode"
  ]
}