{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "apiIncomeEvidence.json",
  "type": "object",
  "title": "The Income Evidence schema",
  "description": "Details of income evidence",
  "properties": {
    "id": {
      "type": "integer",
      "description": "Evidence id"
    },
    "dateReceived": {
      "type": "string",
      "description": "Evidence received Date",
      "format": "date-time"
    },
    "dateModified": {
      "type": "string",
      "description": "Evidence modified Date",
      "format": "date-time"
    },
    "applicantId": {
      "type": "integer",
      "description": "Applicant associated with the income evidence"
    },
    "mandatory": {
      "type": "string",
      "description": "Mandatory flag"
    },
    "otherText": {
      "type": "string",
      "description": "Other text"
    },
    "adhoc": {
      "type": "string",
      "description": "Adhoc"
    },
    "apiEvidenceType": {
      "type": "object",
      "description": "Evidence Type",
      "$ref": "apiEvidenceType.json"
    }
  },
  "additionalProperties": false
}
