{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "apiCreateIntialMeansAssessmentRequest.json",
  "type": "object",
  "title": "Initial Means Assessment Request",
  "description": "Data contract for the initial means assessment request",
  "properties": {
    "laaTransactionId": {
      "type": "string",
      "description": "The txn / correlation UUID"
    },
    "repId": {
      "type": "integer",
      "description": "MAAT / Rep Id"
    },
    "cmuId": {
      "type": "integer",
      "description": "Case Management Unit Id"
    },
    "userId": {
      "type": "string",
      "description": "User  ID"
    },
    "transactionDateTime": {
      "type": "string",
      "description": "Time Stamp of the transaction",
      "format": "date-time"
    },
    "assessmentDate": {
      "type": "string",
      "description": "Effective Date of the assessment",
      "format": "date-time"
    },
    "otherBenefitNote": {
      "type": "string",
      "description": "Benefit Note"
    },
    "otherIncomeNote": {
      "type": "string",
      "description": "Income Note."
    },
    "employmentStatus": {
      "type": "string",
      "description": "Employment status code"
    },
    "notes": {
      "type": "string",
      "description": "Notes field."
    },
    "assessmentStatus": {
      "description": "Assessment Status",
      "$ref": "common/apiAssessmentStatus.json"
    },
    "newWorkReason": {
      "description": "Work Reason Details",
      "$ref": "common/apiNewWorkReason.json"
    },
    "reviewType": {
      "description": "Review Type Info",
      "$ref": "common/apiReviewType.json"
    },
    "supplierInfo": {
      "description": "The  address details of the supplier",
      "$ref": "common/apiSupplierInfo.json"
    },
    "sectionSummaries": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "common/apiAssessmentSectionSummary.json"
      }
    },
    "childWeightings": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "common/apiAssessmentChildWeighting.json"
      }
    },
    "hasPartner": {
      "type": "boolean",
      "description": "Indicates whether the applicant has a partner (used to check if partner weighting factor is applicable)"
    },
    "partnerContraryInterest": {
      "type": "boolean",
      "description": "Indicates whether the applicant's partner has a contrary interest' (used to check if partner weighting factor is applicable)"
    },
    "assessmentType": {
      "description": "Type of as Assessment - Initial, full etc",
      "type": "string",
      "enum": [
        "INIT",
        "FULL"
      ]
    },
    "usn": {
      "type": "integer",
      "description": "Unique Submission Number - EForm Reference"
    },
    "caseType": {
      "type": "string",
      "description": "The case type"
    },
    "userSession": {
      "type": "object",
      "description": "The current users session",
      "$ref": "common/apiUserSession.json"
    },
    "incomeEvidenceSummary": {
      "type": "object",
      "description": "Income Evidence Summary",
      "$ref": "common/apiIncomeEvidenceSummary.json"
    }
  },
  "additionalProperties": false,
  "required": [
    "repId",
    "laaTransactionId",
    "cmuId",
    "userId",
    "transactionDateTime",
    "assessmentDate",
    "newWorkReason",
    "supplierInfo",
    "assessmentSummary",
    "hasPartner",
    "partnerContraryInterest",
    "userSession"
  ]
}